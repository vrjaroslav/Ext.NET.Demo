@{
    var X = Html.X();
}

@(X.GroupTabPanel()
    .ID("UberMainTabPanel")
    .Items(
        X.Panel()
            .ID("ProductsPanel")
            .Title("Loading on render")
            .Loader(X.ComponentLoader()
                .Url(Url.Action("RenderProducts"))
                .Params(new { containerId = "ProductsPanel" })
                .LoadMask(lm => lm.ShowMask = true)
            )
    )
)