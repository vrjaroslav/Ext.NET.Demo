@using Uber.Core
@model List<OrderItem>
@{
    var X = Html.X();
}

@(X.Panel()
    .Layout(LayoutType.Border)
    .Items(
        X.GridPanel()
            .Region(Region.Center)
            .ID("OrderItemsGrid")
            .Store(X.StoreFor<OrderItem>()
                .ID("OrderItemsStore")
                .Proxy(X.AjaxProxy()
                    .Url(Url.Action("GetAll", "OrderItems"))
                    .Reader(X.JsonReader().Root("data"))
                )
                .PageSize(25)
            )
            .ColumnModel(
                X.ColumnFor(Model, m => m.Id)
                    .ToBuilder<Column.Builder>(),
                X.ColumnFor(Model, m => m.Quantity)
                    .ToBuilder<Column.Builder>(),
                X.ColumnFor(Model, m => m.UnitPrice)
                    .ToBuilder<Column.Builder>()
                    .Width(100)
            )
            .TopBar(
                Html.X().Toolbar()
                    .Items(
                        Html.X().Button()
                            .Text("Add")
                            .Icon(Icon.Add)
                            .Handler("#{OrderItemsSpot}.show(#{OrderItemsForm}); #{OrderItemsForm}.getForm().loadRecord(new Product());"),

                        Html.X().Button()
                            .Text("Delete")
                            .Icon(Icon.Exclamation)
                            .DirectEvents(de => {
                                de.Click.Action = "Delete";
                                de.Click.Confirmation.Message = "Are you sure you want to delete this record?";
                                de.Click.Confirmation.ConfirmRequest = true;
                                de.Click.ExtraParams.Add(new Parameter("id", "this.up('grid').getSelectionModel().getSelection()[0].data.Id", ParameterMode.Raw));
                            })
                    )
            )
            .SelectionModel(
                Html.X().RowSelectionModel()
                    .Mode(SelectionMode.Single)
                    .Listeners(l =>
                    {
                        l.Select.Handler = "#{OrderItemsForm}.getForm().loadRecord(record);";
                    })
            ),
                
        X.FormPanelForModel()
            .ID("OrderItemsForm")
            .Region(Region.East)
            .Width(400)
            .FieldDefaults(fd => {
                fd.LabelAlign = LabelAlign.Top;
            })
            .BodyPadding(5)
            .DefaultAnchor("95%")
            .ButtonAlign(Alignment.Center)
            .Buttons(
                X.Button()
                    .Text("Save")
                    .Icon(Icon.Disk)
                    .DirectEvents(de => {
                        de.Click.Url = Url.Action("Save", "OrderItems");
                        de.Click.Before = "return true; ";
                        de.Click.FormID = "OrderItemsForm";
                        de.Click.Success = "if (#{OrderItemsSpot}.active) #{OrderItemsSpot}.hide(); #{OrderItemsGrid}.getStore().reload();";
                    }),
                X.Button()
                    .Text("Cancel")
                    .Icon(Icon.Cross)
                    .Listeners(l => {
                        l.Click.Handler = "if (#{OrderItemsSpot}.active) #{OrderItemsSpot}.hide(); #{OrderItemsForm}.reset();";
                    })
            )
    )
)