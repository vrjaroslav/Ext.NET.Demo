@using Uber.Core
@model List<Product>
@{
    var X = Html.X();
}

@(X.Panel()
    .Layout(LayoutType.Border)
    .Items(
        X.GridPanel()
            .Region(Region.Center)
            .ID("ProductsGrid")
            .Store(X.StoreFor<Product>()
                .ID("ProductsStore")
                .Proxy(X.AjaxProxy()
                    .Url(Url.Action("GetAll", "Products"))
                    .Reader(X.JsonReader().Root("data"))
                )
                .PageSize(25)
            )
            .ColumnModel(
                X.ColumnFor(Model, m => m.Id)
                    .ToBuilder<Column.Builder>(),
                X.ColumnFor(Model, m => m.Name)
                    .ToBuilder<Column.Builder>(),
                X.ColumnFor(Model, m => m.ShortCode)
                    .ToBuilder<Column.Builder>()
                    .Width(100),
                X.ColumnFor(Model, m => m.Description)
                    .ToBuilder<Column.Builder>()
                    .Flex(1),
                X.ColumnFor(Model, m => m.UnitPrice)
                    .ToBuilder<Column.Builder>()
                    .Width(100),
                X.Column()
                    .DataIndex("ProductType")
                    .Text("Type")
                    .Width(100)
            )
            .TopBar(
                Html.X().Toolbar()
                    .Items(
                        Html.X().Button()
                            .Text("Add")
                            .Icon(Icon.Add)
                            .Handler("#{ProductsSpot}.show(#{ProductForm}); #{ProductForm}.getForm().loadRecord(new Product());"),

                        Html.X().Button()
                            .Text("Delete")
                            .Icon(Icon.Exclamation)
                            .DirectEvents(de => {
                                de.Click.Url = Url.Action("Delete", "Products");
                                de.Click.Confirmation.Message = "Are you sure you want to delete this record?";
                                de.Click.Confirmation.ConfirmRequest = true;
                                de.Click.ExtraParams.Add(new Parameter("id", "this.up('grid').getSelectionModel().getSelection()[0].data.Id", ParameterMode.Raw));
                                de.Click.Success = "#{ProductsGrid}.getStore().reload();";
                            })
                    )
            )
            .SelectionModel(
                Html.X().RowSelectionModel()
                    .Mode(SelectionMode.Single)
                    .Listeners(l =>
                    {
                        l.Select.Handler = "#{ProductForm}.getForm().loadRecord(record);";
                    })
            ),
                
        X.FormPanelForModel()
            .ID("ProductForm")
            .Region(Region.East)
            .Width(400)
            .FieldDefaults(fd => {
                fd.LabelAlign = LabelAlign.Top;
            })
            .BodyPadding(5)
            .DefaultAnchor("95%")
            .Items(
                X.ComboBox()
                    .FieldLabel("Type")
                    .Name("ProductTypeId")
                    .DisplayField("Name")
                    .ValueField("Id")
                    .Store(X.StoreFor<ProductType>()
                        .Proxy(Html.X().AjaxProxy()
                            .Url(Url.Action("GetAll", "ProductTypes"))
                            .Reader(Html.X().JsonReader().Root("data"))
                        )
                    )
            )
            .ButtonAlign(Alignment.Center)
            .Buttons(
                X.Button()
                    .Text("Save")
                    .Icon(Icon.Disk)
                    .DirectEvents(de => {
                        de.Click.Url = Url.Action("Save", "Products");
                        de.Click.Before = "return true; ";
                        de.Click.FormID = "ProductForm";
                        de.Click.Success = "if (#{ProductsSpot}.active) #{ProductsSpot}.hide(); #{ProductsGrid}.getStore().reload();";
                    }),
                X.Button()
                    .Text("Cancel")
                    .Icon(Icon.Cross)
                    .Listeners(l => {
                        l.Click.Handler = "if (#{ProductsSpot}.active) #{ProductsSpot}.hide(); #{ProductForm}.reset();";
                    })
            )
    )
)
    