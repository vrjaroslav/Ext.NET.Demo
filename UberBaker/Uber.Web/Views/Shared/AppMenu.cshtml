
@{
    var X = Html.X();
}


@(X.MenuItem()
    .Text("Profile")
    .Icon(Icon.User)
    .DirectEvents(de =>
    {
        de.Click.Url = Url.Action("CurrentProfilePanel", "UserProfiles");
        de.Click.ExtraParams.Add(new { containerId = "MainTabPanel" });
        de.Click.ExtraParams.Add(new { tabId = "ProfilePanel" });
        de.Click.EventMask.ShowMask = true;
        de.Click.EventMask.Msg = "Loading...";
        de.Click.Before = "return beforeTabOpen(extraParams['tabId']);";
        de.Click.Timeout = 120000;
    })
)
                                        
@(X.MenuItem()
    .Text("Configuration")
    .Icon(Icon.Wrench)
    .DirectEvents(de =>
    {
        de.Click.Url = Url.Action("SettingsPanel", "Home");
        de.Click.ExtraParams.Add(new { containerId = "MainTabPanel" });
        de.Click.ExtraParams.Add(new { tabId = "SettingsPanel" });
        de.Click.EventMask.ShowMask = true;
        de.Click.EventMask.Msg = "Loading...";
        de.Click.Before = "return beforeTabOpen(extraParams['tabId']);";
        de.Click.Timeout = 120000;
    })
)
                                        
@(X.MenuItem()
    .Text("Log Out")
    .Icon(Icon.DoorOut)
    .DirectEvents(de =>
    {
        de.Click.Confirmation.ConfirmRequest = true;
        de.Click.Confirmation.Message = "Are you sure you want to log out?";
        de.Click.Url = Url.Action("LogOff", "Account");
    })
)